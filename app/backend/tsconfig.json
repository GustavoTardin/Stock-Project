{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./",
        "target": "es2019",
        "module": "Node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node16"
    },
    "exclude": [
        "**/node_modules*"
    ],
    "include": [
        "./**/**/*.ts"
    ]
}